<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="bi_sales_prediction.DashboardTemplate">
        <div class="o_action o_bi_dashboard h-100 overflow-auto p-4">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="display-5">Sales Intelligence Dashboard</h1>
                    <p class="text-muted">AI-powered analytics and forecasting for your business.</p>
                </div>
            </div>

            <t t-if="state.loading">
                <div class="d-flex justify-content-center align-items-center" style="height: 400px;">
                    <div class="spinner-border text-primary" role="status"/>
                </div>
            </t>
            <t t-elif="state.error">
                <div class="alert alert-danger" t-esc="state.error"/>
            </t>
            <t t-else="">
                <!-- KPI Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100 border-start border-primary border-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Total Revenue</h6>
                                        <h3 class="mb-0" t-esc="formatCurrency(state.kpis.total_revenue)"/>
                                    </div>
                                    <div class="text-primary">
                                        <i class="fa fa-dollar fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100 border-start border-success border-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Monthly Revenue</h6>
                                        <h3 class="mb-0" t-esc="formatCurrency(state.kpis.monthly_revenue)"/>
                                    </div>
                                    <div class="text-success">
                                        <i class="fa fa-calendar fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100 border-start border-info border-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Total Orders</h6>
                                        <h3 class="mb-0" t-esc="state.kpis.total_orders"/>
                                    </div>
                                    <div class="text-info">
                                        <i class="fa fa-shopping-cart fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100 border-start border-warning border-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Total Customers</h6>
                                        <h3 class="mb-0" t-esc="state.kpis.total_customers"/>
                                    </div>
                                    <div class="text-warning">
                                        <i class="fa fa-users fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Second Row KPIs -->
                <div class="row mb-4">
                    <div class="col-md-4 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Yearly Revenue</h6>
                                <h2 class="text-primary" t-esc="formatCurrency(state.kpis.yearly_revenue)"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Monthly Orders</h6>
                                <h2 class="text-success" t-esc="state.kpis.monthly_orders"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Avg Order Value</h6>
                                <h2 class="text-info" t-esc="formatCurrency(state.kpis.avg_order_value)"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="row mb-4">
                    <!-- Monthly Revenue Chart -->
                    <div class="col-md-8 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Monthly Revenue Trend</h5>
                            </div>
                            <div class="card-body" style="height: 350px;">
                                <canvas t-ref="revenueChart"/>
                            </div>
                        </div>
                    </div>
                    <!-- Orders by Status -->
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Orders by Status</h5>
                            </div>
                            <div class="card-body" style="height: 350px;">
                                <canvas t-ref="statusChart"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Prediction Chart -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Sales Forecast (AI Prediction)</h5>
                                <div class="d-flex align-items-center">
                                    <label class="me-2 mb-0">Months to Predict:</label>
                                    <input type="number" class="form-control form-control-sm" style="width: 80px;" 
                                           t-model.number="state.months" t-on-change="fetchPrediction" min="1" max="24"/>
                                </div>
                            </div>
                            <div class="card-body" style="height: 400px;">
                                <canvas t-ref="predictionChart"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tables Row -->
                <div class="row mb-4">
                    <!-- Top Products -->
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-trophy text-warning me-2"/>Top 10 Products</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Product</th>
                                                <th class="text-end">Qty Sold</th>
                                                <th class="text-end">Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.topProducts" t-as="product" t-key="product_index">
                                                <tr>
                                                    <td t-esc="product_index + 1"/>
                                                    <td t-esc="product.name"/>
                                                    <td class="text-end" t-esc="formatNumber(product.quantity)"/>
                                                    <td class="text-end" t-esc="formatCurrency(product.revenue)"/>
                                                </tr>
                                            </t>
                                            <t t-if="!state.topProducts.length">
                                                <tr><td colspan="4" class="text-center text-muted">No data available</td></tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Top Customers -->
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-star text-primary me-2"/>Top 10 Customers</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Customer</th>
                                                <th class="text-end">Orders</th>
                                                <th class="text-end">Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.topCustomers" t-as="customer" t-key="customer_index">
                                                <tr>
                                                    <td t-esc="customer_index + 1"/>
                                                    <td t-esc="customer.name"/>
                                                    <td class="text-end" t-esc="customer.orders"/>
                                                    <td class="text-end" t-esc="formatCurrency(customer.revenue)"/>
                                                </tr>
                                            </t>
                                            <t t-if="!state.topCustomers.length">
                                                <tr><td colspan="4" class="text-center text-muted">No data available</td></tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>
